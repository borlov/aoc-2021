{
  "name": "adventofcode",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/index",
    "demo": "echo \"$package_config_name\"",
    "test": "jest",
    "lint": "eslint ./src/**/*.ts"
  },
  "dependencies": {
    "chalk": "^5.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2",
    "yargs": "^17.3.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.4.0",
    "jest": "^27.4.3",
    "ts-jest": "^27.1.0"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "max-len": [
        "error",
        {
          "code": 80
        }
      ]
    },
    "ignorePatterns": [
      "node_modules",
      "coverage"
    ]
  }
}
